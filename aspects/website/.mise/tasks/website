#!/usr/bin/env bash
# mise description="Setup website"

set -euxo pipefail

curl localhost:2019/config/apps/http/servers -H "Content-Type: application/json" -d @${root}/caddy.json

quartz_git_url="git://localhost/quartz.git"
git_url=""

# Loop through arguments
while [[ "$#" -gt 0 ]]; do
    case $1 in
        --git-url)
            git_url="$2"
            shift 2 # shift twice to bypass key and value
            ;;
        *)
            echo "Unknown parameter passed: $1"
            exit 1
            ;;
    esac
done

mkdir -p /var/www

update_quartz=$(test "$git_url" == "$quartz_git_url" && echo "true" || echo "false")
init_quartz=$(test -d "/var/www/quartz" && echo "false" || echo "true")


if test "$init_quartz" = "true" || "$update_quartz" = "true"; then
    if test ! -d /var/www/quartz; then
      git clone $quartz_git_url /var/www/quartz
    fi
    cd /var/www/quartz
    git pull origin
fi

if test -n "$git_url"; then

    if test ! -d /var/www/content; then
      git clone $git_url /var/www/content
    fi
    cd /var/www/content
    git pull origin

  # build quartz
  cd /var/www/quartz
  npm i --ci
  npx quartz build -d ../content
fi

